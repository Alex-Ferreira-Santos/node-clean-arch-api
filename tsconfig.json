{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "ESNext",
    "rootDir": "src",
    "baseUrl": "src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "build", "./*.ts"],
}
